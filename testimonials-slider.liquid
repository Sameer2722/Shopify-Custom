{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'custom.css' | asset_url | stylesheet_tag }}


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="testimonials-outerbox color-{{ section.settings.color_scheme }}  section-{{ section.id }}-padding">

  <div class="page-width">

    {%- if section.settings.title != blank -%}
      <div class="title-wrapper-with-link ">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endif -%}

    <ul class="custom-slider testimonials">

      {%- for block in section.blocks -%}
        {%- if block.settings.image != blank
 and block.settings.title != blank
 and block.settings.text != blank
        -%}
        {%- endif -%}

        <div class="testimonials-list multicolumn-list__item {% if section.settings.column_alignment == 'center' %} center{% endif %}">

          <div class="testimonials-card multicolumn-card content-container">
            {%- if block.settings.image != blank -%}
              <div class="testimonials-img multicolumn-card__image-wrapper">
                <img src="{{ block.settings.image |  img_url: 'medium' }}" alt="">
              </div>
            {%- endif -%}

            <div class="multicolumn-card__info">
              {%- if block.settings.title != blank -%}
                <h3 class="inline-richtext">{{ block.settings.title }}</h3>
              {%- endif -%}
              {%- if block.settings.text != blank -%}
                <div>{{ block.settings.text }}</div>
              {%- endif -%}
            </div>

          </div>
        </div>
      {%- endfor -%}
    </ul>
  </div>
</div>


{% schema %}
  {
    "name": "Testimonials",
    "class": "section",
    "tag": "section",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "title",
        "default": "Testimonials",
        "label": "Heading"
      },
      {
        "type": "select",
        "id": "heading_size",
        "options": [
          {
            "value": "h2",
            "label": "h2"
          }, {
            "value": "h1",
            "label": "h1"
          }, {
            "value": "h0",
            "label": "h0"
          }
        ],
        "default": "h1",
        "label": "Heading Size"
      },
      {
        "type": "select",
        "id": "column_alignment",
        "options": [
          {
            "value": "left",
            "label": "left"
          }, {
            "value": "center",
            "label": "center"
          }, {
            "value": "right",
            "label": "right"
          }
        ],
        "default": "left",
        "label": "Column Alignment"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Choose Color",
        "default": "background-1"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "column",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Choose Image"
          }, {
            "type": "inline_richtext",
            "id": "title",
            "default": "Column",
            "label": "Name"
          }, {
            "type": "richtext",
            "id": "text",
            "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Testimonials",
        "blocks": [
          {
            "type": "column"
          }, {
            "type": "column"
          }, {
            "type": "column"
          }
        ]
      }
    ]
  }
{% endschema %}